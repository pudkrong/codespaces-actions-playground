{
  "name": "codespaces-actions-playground",
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.2",
    "@swc/core": "^1.3.46",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "semantic-release": "^21.0.1"
  },
  "type": "module",
  "scripts": {
    "release": "semantic-release --dry-run",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "main",
      "test"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testRegex": ".+\\.spec\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pudkrong/codespaces-actions-playground.git"
  }
}
